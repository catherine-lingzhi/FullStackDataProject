<div class="max-w-screen-xl mx-auto px-4">
  <h1 class="text-2xl font-bold mb-10 text-center">Product Details</h1>

  <div class="flex justify-center">
    <div class="w-1/3 ">
      <% if @product.image_link.present? %>
        <%= image_tag @product.image_link, alt: @product.name, class: "w-64 h-auto" %>
      <% end %>
    </div>
    <div class="w-1/3 ">
      <h2 class="text-xl font-bold mb-2"><%= @product.name %></h2>
      <p class="text-gray-700 mb-2"><strong>Description:</strong> <%= @product.description %></p>
      <p class="text-gray-700 mb-2"><strong>Category:</strong> <%= @product.category.name %></p>
      <p class="text-gray-700 mb-2"><strong>Brand:</strong> <%= @product.brand.name %></p>

      <p class="text-green-500 font-bold mb-2"><strong>Price:</strong> $<%= @product.price %></p>
      <div class="flex flex-wrap">
        <% @product.tags.each do |tag| %>
          <span class="mr-2 mb-2 p-2 bg-gray-200 rounded">
            <%= tag.name %>
          </span>
        <% end %>
      </div>
        <div class="flex justify-left mt-10">
    <%= link_to products_path, class: "px-4 py-2 bg-indigo-500 text-white rounded-full hover:bg-indigo-600" do %>
      Go Back
    <% end %>
  </div>
    </div>

  </div>

</div>
