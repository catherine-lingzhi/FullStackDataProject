<%= form_with(url: search_products_path, method: :get, local: true) do |form| %>
  <div class="flex items-center space-x-2">
    <div class="relative">
      <%= form.text_field :keywords, class: "border p-2 rounded-l-lg w-60 transition border-gray-400 hover:border-blue-500", placeholder: 'Search for Products' %>
      <div class="absolute inset-y-0 left-0 flex items-center pl-2">
        <i class="fas fa-search text-gray-400"></i>
      </div>
    </div>

    <%= form.select :category_id, Category.all.collect { |c| [c.name, c.id] }, { include_blank: 'All Categories' }, class: 'border p-2' %>

    <%= form.submit "Search", class: "bg-blue-500 text-white rounded-r-lg p-2 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
  </div>
<% end %>
